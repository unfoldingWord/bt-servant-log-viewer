{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {
      "entry": ["tooling/**/*.js"],
      "project": ["tooling/**/*.js"]
    },
    "apps/web": {
      "entry": [
        "src/routes/**/*.{svelte,ts}",
        "src/app.html",
        "src/hooks.server.ts",
        "vite.config.ts",
        "svelte.config.js",
        "playwright.config.ts",
        "vitest.config.ts"
      ],
      "project": ["src/**/*.{svelte,ts}"]
    },
    "apps/api": {
      "entry": ["src/server.ts", "vitest.config.ts"],
      "project": ["src/**/*.ts"]
    },
    "packages/*": {
      "entry": ["src/index.ts", "src/**/*.test.ts", "src/**/*.spec.ts"],
      "project": ["src/**/*.ts"]
    }
  },
  "ignore": ["**/*.test.ts", "**/*.spec.ts", "**/dist/**", "**/build/**", "**/.svelte-kit/**"],
  "ignoreDependencies": ["@sveltejs/adapter-node", "tslib", "@types/chai"],
  "ignoreBinaries": ["playwright", "fly"]
}
