{
  "name": "bt-servant-log-viewer",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Fast, dark-themed, web-based log viewer for BT-Servant telemetry",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "verify": "turbo run typecheck lint test arch knip --continue --summarize",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "arch": "depcruise --config tooling/depcruise.json \"apps\" \"packages\"",
    "knip": "knip",
    "scan:forbidden": "node tooling/scan-forbidden.js",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "prepare": "husky",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "deploy:staging": "fly deploy --app bt-log-viewer-staging --config infra/fly.staging.toml",
    "deploy:prod": "fly deploy --app bt-log-viewer-prod --config infra/fly.production.toml"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.17.0",
    "dependency-cruiser": "^16.7.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "knip": "^5.40.1",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write",
      "node tooling/scan-forbidden.js"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
